<div class="container">
  <%= render 'layouts/header' %>

  <%= render 'layouts/categories' %>

</div>

<div class="container">
  <div class="row">

    <div class="col-12 text-center">
      <p class="text-center" style="text-align: center"><%= @post.created_at.to_s(:short) %></p>
      <p class="text-center" style="text-align: center"><%= @post.title %></p>
      <div class="col-12 text-center">
        <img class="image" src="<%= @post.image.name %>">
      </div>

          <div class="col-12 text-left">
          <p class="card-text mb-auto text-left"> <%= sanitize  @post.body %></p>
          </div>

    </div>

  </div>

</div>



<% if current_user && current_user.admin %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
<% end %>

